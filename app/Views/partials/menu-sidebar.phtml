<?php $sections = $menu['sidebar']['sections'] ?? array(); ?>
<?php foreach ($sections as $section): ?>
  <div class="section">
    <h4><?php echo htmlspecialchars(\App\Core\I18n::t((string)($section['title'] ?? ''))); ?></h4>
    <ul>
      <?php if (!empty($section['items']) && is_array($section['items'])): ?>
        <?php foreach ($section['items'] as $item): ?>
          <li><a href="<?php echo htmlspecialchars((string)($item['href'] ?? '#')); ?>"><?php echo htmlspecialchars(\App\Core\I18n::t((string)($item['label'] ?? ''))); ?></a></li>
        <?php endforeach; ?>
      <?php endif; ?>
    </ul>
  </div>
<?php endforeach; ?>
